{
  "name": "simple-rpg-game-api",
  "version": "0.1.0",
  "description": "simple-rpg-game-api",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "watch": "tsc -w",
    "start": "nodemon dist/index.js",
    "dev": "set DEBUG=simple-rpg-game-api:* && nodemon --exec ts-node src/server.ts",
    "lint": "eslint --ext ts --ignore-path .gitignore .",
    "lint:fix": "eslint --ext ts . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walid-sadaoui/simple-rpg-game-api.git"
  },
  "author": "Walid SADAOUI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/walid-sadaoui/simple-rpg-game-api/issues"
  },
  "homepage": "https://github.com/walid-sadaoui/simple-rpg-game-api#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http": "0.0.1-security",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.41",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.3.0",
    "jest": "^27.0.6",
    "jest-html-reporters": "^2.1.6",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier --write",
    "*.{js,ts}": "eslint --ext js,ts --ignore-path .gitignore ."
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
